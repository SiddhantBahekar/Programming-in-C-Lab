#include<stdio.h>
#include<math.h>
int main() {
	float a, b, c, discriminant, realPart, imaginaryPart, root1, root2;
	printf("Enter coefficients a, b and c: ");
	scanf("%f %f %f", &a, &b, &c);
	discriminant = b * b - 4 * a * c;
	realPart = -b / (2 * a);
	imaginaryPart = sqrt(fabs(discriminant)) / (2 * a);

	root1 = realPart + (discriminant >= 0 ? imaginaryPart : 0);
	root2 = realPart - (discriminant >= 0 ? imaginaryPart : 0);

	if (discriminant > 0) {
		printf("root1 = %.2f\n", root1);
		printf("root2 = %.2f\n", root2);
	} else if (discriminant == 0) {
		printf("root1 = %.2f\n", root1);
		printf("root2 = %.2f\n", root2);
	}else {
		printf("root1 = %.2f+%.2fi\n", realPart, imaginaryPart);
		printf("root2 = %.2f-%.2fi\n", realPart, imaginaryPart);
	}

	return 0;
}
